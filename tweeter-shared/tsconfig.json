{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "CommonJS",
    "lib": ["esnext", "ES2021.String"],
    "skipLibCheck": true,
    "outDir": "./dist",
    "declaration": true,
    "esModuleInterop": true,

    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "exclude": ["node_modules"] // exclude the node_modules directory FIXME if this breaks something
}
